
<form action="/pet/search" method="POST">
    <label for="search">Search</label>
    <input type="text" name="name">
     <h5>{{errorMessage}}</h5>
    <button>Search</button>
</form>

{{#each filterList}}

  <li>
     <a href="/pet/{{this._id}}">Name: {{this.name}}</a>
     <br>
     <a href="/pet/{{this._id}}">Owner Name: {{this.owner}}</a>
    
    </li>

{{/each}}

